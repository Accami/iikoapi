{
    "name": "stanislavqq/iikoapi",
    "type": "library",
    "description": "PHP classes for iiko api",
    "keywords": [
        "stanislavqq",
        "iikoapi"
    ],
    "homepage": "https://github.com/stanislavqq/iikoapi",
    "license": "MIT",
    "authors": [
        {
            "name": "stanislavqq",
            "email": "stanislavqq@yandex.ru",
            "homepage": "https://ignal.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.1",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "stanislavqq\\iikoapi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "stanislavqq\\iikoapi\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.0-alpha"
        }
    },
    "config": {
        "sort-packages": true
    }
}
